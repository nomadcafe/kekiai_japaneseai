# 生产环境 Docker Compose 配置示例
# 使用方法: docker-compose -f docker-compose.prod.yml up -d
# 
# 注意: 此ファイルは例です。実際の使用時は環境変数を適切に設定してください。
# 環境変数の設定方法:
# 1. ホストマシンで環境変数を設定
# 2. Docker secrets を使用（Docker Swarm の場合）
# 3. 環境変数ファイルを別途管理（CI/CD パイプラインなど）

services:
  # VOICEVOX エンジン
  voicevox:
    image: voicevox/voicevox_engine:cpu-ubuntu20.04-latest
    ports:
      - "50021:50021"
    networks:
      - app-network
    deploy:
      resources:
        limits:
          cpus: '3'
          memory: 4G
        reservations:
          cpus: '2'
          memory: 2G

  # FastAPI アプリケーション
  api:
    build:
      context: .
      dockerfile: Dockerfile.api
    ports:
      - "8000:8000"
    # 環境変数を直接指定（.env ファイルをマウントしない）
    environment:
      - VOICEVOX_URL=http://voicevox:50021
      - PYTHONUNBUFFERED=1
      # LLM プロバイダー設定
      - USE_MODEL=${USE_MODEL:-openai}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - OPENAI_MODEL=${OPENAI_MODEL:-gpt-4o}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - CLAUDE_MODEL=${CLAUDE_MODEL:-claude-3-opus-20240229}
      - GOOGLE_API_KEY=${GOOGLE_API_KEY}
      - GEMINI_MODEL=${GEMINI_MODEL:-gemini-pro}
      - AWS_BEDROCK_CREDENTIALS=${AWS_BEDROCK_CREDENTIALS}
      # 認証設定
      - LOGIN_PASSWORD=${LOGIN_PASSWORD}
      # LLM 設定
      - LLM_TEMPERATURE=${LLM_TEMPERATURE:-0.7}
      - LLM_MAX_TOKENS=${LLM_MAX_TOKENS:-4000}
    # .env ファイルをマウントしない（セキュリティのため）
    volumes:
      - ./uploads:/app/uploads
      - ./output:/app/output
      - ./slides:/app/slides
      - ./audio:/app/audio
      - ./data:/app/data
      # コードはイメージに含まれているため、開発時のようなマウントは不要
    depends_on:
      - voicevox
    networks:
      - app-network
    command: uvicorn api.main:app --host 0.0.0.0 --port 8000 --limit-max-requests 1000 --limit-concurrency 100 --timeout-keep-alive 30
    deploy:
      resources:
        limits:
          cpus: '6'
          memory: 12G
        reservations:
          cpus: '4'
          memory: 8G
    restart: unless-stopped

  # Svelte フロントエンド
  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - VITE_API_URL=${VITE_API_URL:-http://localhost:8000}
      - INTERNAL_API_URL=http://api:8000
      - ORIGIN=${ORIGIN:-http://localhost:3000}
    depends_on:
      - api
    networks:
      - app-network
    deploy:
      resources:
        limits:
          cpus: '2'
          memory: 2G
        reservations:
          cpus: '1'
          memory: 1G
    restart: unless-stopped

networks:
  app-network:
    driver: bridge



